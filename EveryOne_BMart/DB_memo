insert into category values(ca_seq.nextval,'요리/반찬');
insert into category values(ca_seq.nextval,'정육/수산/계란');
insert into category values(ca_seq.nextval,'라면/면');
insert into category values(ca_seq.nextval,'과일/채소');
insert into category values(ca_seq.nextval,'양념/장류/오일');
insert into category values(ca_seq.nextval,'우유/유제품');
insert into category values(ca_seq.nextval,'햄/어묵/통조림');
