--상품 카테고리 테이블
drop sequence ca_seq;
create sequence ca_seq
	increment by 1
	start with 1
	minvalue 1
	nocache ;

drop table category cascade constraints;
create table category(
	num number,
	name varchar2(30) primary key
);

insert into category values(ca_seq.nextval,'쌀/잡곡/견과');
insert into category values(ca_seq.nextval,'밥/도시락');
