<?xml version="1.0" encoding="UTF-8"?>

<!-- mall.xml -->
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mall">
	<select id="getAllCategory" resultType="mall.model.CategoryBean">
		select * from category
	</select>
	
	<select id="getBestProduct" resultType="mall.model.ProductBean">
		select * from product order by ordercount desc
	</select>
</mapper>