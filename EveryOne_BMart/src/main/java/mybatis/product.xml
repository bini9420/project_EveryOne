<?xml version="1.0" encoding="UTF-8"?>

<!-- product.xml -->
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="product.Product">
	<select id="getBestProduct" resultType="mall.model.ProductBean">
		select * from product order by ordercount desc
	</select>
	
	<select id="getWatchProductInfo" resultType="mall.model.ProductBean">
		select * from product where pnum=#{pnum}
	</select>
	
	<select id="getInterestProductInfo" resultType="mall.model.ProductBean">
		select * from product where pnum=#{pnum}
	</select>
</mapper>