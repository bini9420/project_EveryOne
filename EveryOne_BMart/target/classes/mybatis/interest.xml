<?xml version="1.0" encoding="UTF-8"?>

<!-- interest.xml -->
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="interest.Interest">
	<select id="getInterestLists" resultType="mall.model.InterestBean">
		select * from interest where id=#{id} order by inum desc
	</select>
	
	<delete id="deleteInterest">
		delete from interest where id=#{id} and pnum=#{pnum}
	</delete>
	
	<insert id="insertInterest">
		insert into interest values(iseq.nextval, #{id}, #{pnum})
	</insert>
</mapper>