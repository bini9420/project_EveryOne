<?xml version="1.0" encoding="UTF-8"?>

<!-- review.xml -->
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="review">
	<select id="getReviewTotalCount" resultType="int">
		select count(*) from review where pnum=#{pnum}
	</select>
	
	<update id="updateReview">
		update review set score=#{score}, rcomment=#{rcomment}, rdate=sysdate where rnum=${rnum}
	</update>
	
	<delete id="deleteReview">
		delete from review where rnum=#{rnum}
	</delete>
	
	<select id="getReviewCount" resultType="int">
		select count(*) as cnt from review
		where pnum = #{pnum}
	</select>
	
	<select id="getReviewsByProduct" resultType="review">
        SELECT * FROM review WHERE pnum = #{pnum}
    </select>

    <select id="getAverageScore" resultType="double">
        SELECT AVG(score) FROM review WHERE pnum = #{pnum}
    </select>
    
    <select id="getReview" parameterType="int" resultType="review">
        SELECT * FROM review WHERE rnum = #{rnum}
    </select>
	
	<select id="getAllReviews" resultType="review">
		SELECT R.*, P.pnum FROM review R JOIN Product P ON R.pnum = P.pnum
	</select>
		<insert id="insertReview">
		insert into review 
		values(rseq.nextval,#{id},#{pnum},#{rcomment},#{image jdbcType=VARCHAR},sysdate,#{score},#{onum})
	</insert>
	<select id="getReivewInfoCount" resultType="int">
		select count(*) from review where onum = #{onum}
	</select>
    
</mapper>