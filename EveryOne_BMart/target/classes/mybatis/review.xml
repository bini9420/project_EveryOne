<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="review.model.Review">
	
	<select id="getReviewCount" resultType="int">
		select count(*) as cnt from review
		where pnum = #{pnum}
	</select>
	
	<select id="getReviewsByProduct" resultType="ReviewBean">
        SELECT * FROM review WHERE pnum = #{pnum}
    </select>

    <select id="getAverageScore" resultType="double">
        SELECT AVG(score) FROM review WHERE pnum = #{pnum}
    </select>
    
    <select id="getReview" parameterType="int" resultType="ReviewBean">
        SELECT * FROM review WHERE rnum = #{rnum}
    </select>

    <delete id="deleteReview">
        DELETE FROM review WHERE rnum = #{rnum}
    </delete>
	<insert id="insertReview">
		insert into review 
		values(rseq.nextval,#{id},#{pnum},#{rcomment},#{image jdbcType=VARCHAR},sysdate,#{score},#{onum})
	</insert>
</mapper>