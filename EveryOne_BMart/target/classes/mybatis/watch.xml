<?xml version="1.0" encoding="UTF-8"?>

<!-- watch.xml -->
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="watch">
	
	<select id="getWatch" resultType="int">
		select count(*) from watch where id=#{id} and pnum=#{pnum}
	</select>
	
	<insert id="insertWatch">
		insert into watch values(wseq.nextval, #{id}, #{pnum}, sysdate)
	</insert>
	
	<update id="updateWatch">
		update watch set wnum = wseq.nextval where id=#{id} and pnum=#{pnum}
	</update>
</mapper>